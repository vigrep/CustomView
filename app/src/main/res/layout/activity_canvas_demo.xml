<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".canvas.CanvasDemoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.vigrep.customview.canvas.DrawColorView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            />
        <com.vigrep.customview.canvas.DrawCircleView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            />
        <com.vigrep.customview.canvas.DrawRectView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            />
        <com.vigrep.customview.canvas.DrawPointView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            />
        <com.vigrep.customview.canvas.DrawOvalView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            />
        <com.vigrep.customview.canvas.DrawLineView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            />
        <com.vigrep.customview.canvas.DrawArcView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            />
        <com.vigrep.customview.canvas.DrawPathView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                />
        <com.vigrep.customview.canvas.DrawHistogramView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            />

    </LinearLayout>
</ScrollView>
